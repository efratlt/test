pipeline {
    agent none

    stages {
        stage('Run Parallel Tests') {
            parallel {
                stage('Windows') {
                    agent {
                        label 'SlaveWindows'
                    }
                    steps {
                        script {
                            def osVersion = sh(script: 'cat /etc/os-release | grep PRETTY_NAME', returnStdout: true).trim()
                            echo "Linux OS version: ${osVersion}"
                        }
                        sh "echo uname -r"
                    }
                }

                stage('Linux') {
                    agent {
                        label 'unix'
                    }
                    steps {
                        bat 'ver'
                    }
                }
            }
        }
    }
}