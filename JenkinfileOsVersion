pipeline {
    agent none

    stages {
        stage('Run Parallel Tests') {
            parallel {
                stage('Windows') {
                    agent {
                        label 'SlaveWindows'
                    }
                    steps {
                        script {
                            def osVersion = sh(script: 'cat /etc/os-release | grep PRETTY_NAME', returnStdout: true).trim()
                            echo "Linux OS version: ${osVersion}"
                        }
                        sh "echo uname -r"
                    }
                }

                stage('Linux') {
                    agent {
                        label 'unix'
                    }
                    steps {
                        script {
                            def osName = System.getProperty('os.name')
                            def osVersion = System.getProperty('os.version')
                            def osArch = System.getProperty('os.arch')

                            echo "Operating System: ${osName}"
                            echo "Version: ${osVersion}"
                            echo "Architecture: ${osArch}"
                        }
                    }
                }
            }
        }
    }
}